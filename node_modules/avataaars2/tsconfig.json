{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "newLine": "lf",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": [
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "./tests/**/*",
    "./dist/**/*",
    "./node_modules/**/*"
  ],
  "types": [
    "jest",
    "node"
  ]
}